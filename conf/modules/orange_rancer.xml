<!DOCTYPE module SYSTEM "module.dtd">

<module name="orange_racer" dir="ctrl">
  <doc>
    <description>
        Monocular Avoid Race Control Module.
    </description>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings NAME="Racer">
        <dl_setting var="race_multiplier" min="0.01" step="0.01" max="3.0" module="ctrl/orange_racer" shortname="speed"/>
        <dl_setting var="race_radius" min="0.01" step="0.01" max="6.0" module="ctrl/orange_racer" shortname="radius"/>
        <dl_setting var="orange_racer_K_V_P" min="0.01" step="0.01" max="6.0" module="ctrl/orange_racer" shortname="K_V_P"/>
      </dl_settings>
    </dl_settings>
  </settings>

  <header>
    <file name="orange_racer.h"/>
  </header>

  <makefile>
    <file name="orange_racer.c"/>
  </makefile>

</module>

